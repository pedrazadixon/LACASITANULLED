	clear
	clear
	red=$(tput setaf 1)
	gren=$(tput setaf 2)
	yellow=$(tput setaf 3)
	msg -bar
	usuarios_ativos=('' $(mostrar_hwid))
	if [[ -z ${usuarios_ativos[@]} ]]; then
		msg -verm "$(fun_trans "Ningun usuario HWID")"
		msg -bar
