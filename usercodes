	msg -ama "$(fun_trans "Usuario Seleccionado"):\e[31m $usuario_del"
	pkill -u $usuario_del
	droplim=$(droppids | grep -w "$usuario_del" | awk '{print $2}')
	kill -9 $droplim &>/dev/null
	rm_token "$usuario_del"
	msg -bar
	msg -ne " Enter Para Continuar" && read enter
	${SCPusr}/usercodes
}

