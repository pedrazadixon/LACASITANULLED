		while true; do
			echo -ne "\033[1;36m"
			read -p " Digite Un Puerto SSH/DROPBEAR activo: " PORTLOC
			echo -e ""
			if [[ ! -z $PORTLOC ]]; then
				if [[ $(echo $PORTLOC | grep [0-9]) ]]; then
					[[ $(mportas | grep $PORTLOC | head -1) ]] && break || echo -e "ESTE PUERTO NO EXISTE"
