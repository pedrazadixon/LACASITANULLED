		echo -e " \e[1;93m[\e[92m0\e[93m] \e[97m$(msg -verm2 "âž› ")\033[1;97mVOLVER"
		msg -bar
		echo -ne " Digite Una Opcion :\033[1;37m "
		read portproxy
		case $portproxy in
		1) wsocks ;;
		2) addws ;;
		3) unws ;;

		esac
	}

